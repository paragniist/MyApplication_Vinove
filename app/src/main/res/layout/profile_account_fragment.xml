<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:elevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Edit Personal Info"
                        android:textColor="#000000"
                        android:textSize="20sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:text="DOB:"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:gravity="right"
                            android:text="4/5/1989"
                            android:textColor="#39414A"
                            android:textSize="14sp"

                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/horizontalLineColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:text="Phone:"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="15sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="right"
                            android:text="310714655"
                            android:textColor="@color/custom_dialog_right_textViewColor"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>


                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dip"
                        android:background="@color/horizontalLineColor" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_weight=".5"
                            android:text="Address:"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_weight=".5"
                            android:gravity="right|center"
                            android:text="1342 McAllister San Francisco CA 94115"
                            android:textColor="@color/custom_dialog_right_textViewColor"
                            android:textSize="14sp"

                            tools:ignore="RtlHardcoded" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/roundbutton"
                        android:text="Edit Personal Info"
                        android:textAllCaps="false"
                        android:textColor="@color/buttonTextColor" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:elevation="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/payment" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Payment Details"
                        android:textColor="#000000"
                        android:textSize="20sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:text="Bank of America Debit"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp"
                            android:textStyle="" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:gravity="right"
                            android:text="Delete"
                            android:textColor="#5756F6"
                            android:textSize="14sp"

                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:text="Account"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="right"
                            android:text="****1132"
                            android:textColor="@color/custom_dialog_right_textViewColor"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/roundbutton"
                        android:text="Edit Payment Settings"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:clickable="true"
                android:elevation="8dp"
                android:focusable="true"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Time Preferences"
                        android:textColor="#000000"
                        android:textSize="20sp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Make sure you have your time preferences set up so you are eligible for shirts"
                        android:textColor="#ACB0B4"
                        android:textSize="12sp"

                        />


                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/roundbutton"
                        android:text="Manage"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_margin"
                android:clickable="true"
                android:elevation="8dp"
                android:focusable="true"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:text="Time off"
                        android:textColor="#000000"
                        android:textSize="20sp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:text="Approved:"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:gravity="right"
                            android:text="Cancel"
                            android:textColor="#5756F6"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:text="Start Date:"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:gravity="right"
                            android:text="Jan 11,2018"
                            android:textColor="@color/custom_dialog_right_textViewColor"
                            android:textSize="14sp"
                            tools:ignore="RtlHardcoded" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_weight=".5"
                            android:text="End Date:"
                            android:textColor="@color/custom_dialog_left_textViewColor"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center"
                            android:layout_marginBottom="@dimen/default_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            android:layout_weight=".5"
                            android:gravity="right|center"
                            android:text="Jan 13,2018"
                            android:textColor="@color/custom_dialog_right_textViewColor"
                            android:textSize="14sp"

                            tools:ignore="RtlHardcoded" />


                    </LinearLayout>

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/default_margin"
                        android:layout_marginLeft="40dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="@dimen/default_margin"
                        android:background="@drawable/roundbutton"
                        android:text="Request New"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF" />


                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</FrameLayout>
